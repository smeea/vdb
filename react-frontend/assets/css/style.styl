  &__dropdown-indicator
    background: var(--bg-primary)
  &__menu
    z-index:  3 !important
  &__menu-list
    background: var(--bg-primary)
    color: var(--fg-primary)
  &__indicators
    background: var(--bg-primary)
  &__indicator-separator
    background-color: var(--border-forms) !important
  &__dropdown-indicator
    color: var(--border-forms) !important
  &__option--is-focused
    background: var(--bg-menu-focused) !important
  &__option--is-selected
    background: var(--bg-menu-selected) !important

.react-select-tags
  &__value-container
    padding: 2px 2px !important
  &__input
    color: var(--fg-primary) !important
  &__control
    background: rgba(0, 0, 0, 0) !important
    border-color: rgba(0, 0, 0, 0) !important
  &__dropdown-indicator,
  &__indicators
    display: none !important
  &__menu
    z-index:  3 !important
  &__menu-list
    background: var(--bg-primary)
    color: var(--fg-primary)
  &__option--is-focused
    background: var(--bg-menu-focused) !important
  &__option--is-selected
    background: var(--bg-menu-selected) !important
  &__multi-value
    border-radius: 4px !important
    background: var(--bg-button) !important
  &__multi-value__label
    color: var(--fg-primary) !important
    border-radius: 4px 0px 0px 4px !important
    border-top: 1px solid var(--border-forms)
    border-bottom: 1px solid var(--border-forms)
    border-left: 1px solid var(--border-forms)
  &__multi-value__remove
    background: var(--bg-button) !important
    border-radius: 0px 4px 4px 0px !important
    border-top: 1px solid var(--border-forms)
    border-bottom: 1px solid var(--border-forms)
    border-right: 1px solid var(--border-forms)
  &__multi-value__remove:hover
    color: var(--fg-button) !important
    background: var(--bg-button-hover) !important
  &__multi-value-container
    background: var(--bg-primary)

.bordered.react-select-tags__control
  border: 1px solid var(--border-secondary) !important

.tags-filter
