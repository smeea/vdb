  &__menu-list
    background: var(--bg-primary)
    color: var(--fg-primary)
  &__option--is-focused
    background: var(--bg-checkbox-selected-primary) !important
  &__option--is-selected
    background: var(--border-primary) !important
  &__multi-value
    border-radius: 4px !important
    background: var(--bg-button) !important
  &__multi-value__label
    color: var(--fg-primary) !important
    border-radius: 4px 0px 0px 4px !important
    border-top: 1px solid var(--border-secondary)
    border-bottom: 1px solid var(--border-secondary)
    border-left: 1px solid var(--border-secondary)
  &__multi-value__remove
    background: var(--bg-button) !important
    border-radius: 0px 4px 4px 0px !important
    border-top: 1px solid var(--border-secondary)
    border-bottom: 1px solid var(--border-secondary)
    border-right: 1px solid var(--border-secondary)
  &__multi-value__remove:hover
    color: var(--fg-third) !important
    background: var(--border-primary) !important
  &__multi-value-container
    background: var(--bg-primary)

.bordered.react-select-tags__control
  border: 1px solid var(--bg-secondary) !important

